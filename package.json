{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for React projects.",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prepare": "husky install"
  },
  "keywords": [],
  "lint-staged": {
    "src/**/*.ts": [
      "tsc-files --noEmit",
      "eslint --report-unused-disable-directives --max-warnings 0",
      "prettier --write"
    ],
    "src/**/*.tsx": [
      "tsc-files --noEmit",
      "eslint --report-unused-disable-directives --max-warnings 0",
      "prettier --write"
    ],
    "src/**/*.js": [
      "eslint --report-unused-disable-directives --max-warnings 0",
      "prettier --write"
    ],
    "src/**/*.jsx": [
      "eslint --report-unused-disable-directives --max-warnings 0",
      "prettier --write"
    ]
  },
  "author": "fairyscript",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.19.0"
  },
  "devDependencies": {
    "@jinixx/vite-plugin-git-revision": "^0.1.14",
    "@swc/plugin-emotion": "^2.5.98",
    "@types/node": "^20.9.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-valtio": "^0.6.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "tsc-files": "^1.1.4",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-tsconfig-paths": "^4.2.1"
  }
}
